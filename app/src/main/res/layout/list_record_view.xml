<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/code"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:padding="3dp"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/ch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/en"
        android:maxLines="1"
        android:paddingEnd="50dp"
        android:textSize="17sp" />
    <TextView
        android:id="@+id/en"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ch"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@id/code"
        android:ellipsize="end"
        android:maxLines="2"
        android:padding="3dp"
        android:visibility="visible" />


    <TextView
        android:id="@+id/money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/en"
        android:layout_alignEnd="@+id/ch"
        android:background="@android:color/holo_orange_light"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAlignment="viewStart"
        android:textAppearance="@style/TextAppearance.Design.Counter"
        android:topLeftRadius="30dp"
        android:topRightRadius="30dp"
        android:bottomLeftRadius="30dp"
        android:bottomRightRadius="30dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/note"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_horizontal_margin"
        android:layout_toEndOf="@id/en"

        />


</RelativeLayout>